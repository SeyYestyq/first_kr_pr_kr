<Window x:Class="library.GenresWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление жанрами" Height="350" Width="500" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="GenresDataGrid" Grid.Row="0" AutoGenerateColumns="False" IsReadOnly="True" SelectionChanged="GenresDataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="30"/>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="150"/>
                <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Margin="0,10,0,10">
            <DockPanel Margin="0,0,0,5">
                <TextBlock Text="Название:" Width="70" VerticalAlignment="Center"/>
                <TextBox x:Name="NameTextBox"/>
            </DockPanel>
            <DockPanel>
                <TextBlock Text="Описание:" Width="70" VerticalAlignment="Center"/>
                <TextBox x:Name="DescriptionTextBox"/>
            </DockPanel>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Добавить" Width="80" Margin="0,0,10,0" Click="AddGenre_Click"/>
            <Button Content="Сохранить" Width="80" Margin="0,0,10,0" Click="EditGenre_Click"/>
            <Button Content="Удалить" Width="80" Click="DeleteGenre_Click"/>
        </StackPanel>
    </Grid>
</Window>