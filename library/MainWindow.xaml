<Window x:Class="library.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление библиотекой" Height="500" Width="850" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Поиск:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="SearchTextBox" Width="150" Margin="0,0,15,0" TextChanged="SearchTextBox_TextChanged"/>

            <TextBlock Text="Жанр:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox x:Name="GenreFilterComboBox" Width="120" Margin="0,0,15,0" SelectionChanged="Filter_SelectionChanged"/>

            <TextBlock Text="Автор:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox x:Name="AuthorFilterComboBox" Width="120" SelectionChanged="Filter_SelectionChanged"/>

            <Button Content="Сбросить" Width="70" Margin="10,0,0,0" Click="ResetFilter_Click"/>
        </StackPanel>

        <DataGrid Grid.Row="1" x:Name="BooksDataGrid" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="30"/>
                <DataGridTextColumn Header="Название" Binding="{Binding Title}" Width="*"/>
                <DataGridTextColumn Header="Автор" Binding="{Binding Author.LastName}" Width="120"/>
                <DataGridTextColumn Header="Жанр" Binding="{Binding Genre.Name}" Width="100"/>
                <DataGridTextColumn Header="Год" Binding="{Binding PublishYear}" Width="60"/>
                <DataGridTextColumn Header="ISBN" Binding="{Binding ISBN}" Width="100"/>
                <DataGridTextColumn Header="В наличии" Binding="{Binding QuantityInStock}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Авторы" Width="100" Margin="0,0,10,0" Click="ManageAuthors_Click"/>
            <Button Content="Жанры" Width="100" Margin="0,0,10,0" Click="ManageGenres_Click"/>
            <Button Content="Добавить книгу" Width="120" Margin="0,0,10,0" Click="AddBook_Click"/>
            <Button Content="Редактировать" Width="100" Margin="0,0,10,0" Click="EditBook_Click"/>
            <Button Content="Удалить" Width="80" Click="DeleteBook_Click"/>
        </StackPanel>
    </Grid>
</Window>