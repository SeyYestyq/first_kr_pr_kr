<Window x:Class="library.AuthorsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление авторами" Height="400" Width="600" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="AuthorsDataGrid" Grid.Row="0" AutoGenerateColumns="False" IsReadOnly="True" SelectionChanged="AuthorsDataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="30"/>
                <DataGridTextColumn Header="Имя" Binding="{Binding FirstName}" Width="*"/>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding LastName}" Width="*"/>
                <DataGridTextColumn Header="Страна" Binding="{Binding Country}" Width="100"/>
                <DataGridTextColumn Header="Дата рождения" Binding="{Binding BirthDate, StringFormat=\{0:dd.MM.yyyy\}}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,10">
            <TextBlock Text="Имя:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="FirstNameTextBox" Width="100" Margin="0,0,10,0"/>

            <TextBlock Text="Фамилия:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="LastNameTextBox" Width="100" Margin="0,0,10,0"/>

            <TextBlock Text="Страна:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="CountryTextBox" Width="80" Margin="0,0,10,0"/>

            <TextBlock Text="Дата рожд.:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <DatePicker x:Name="BirthDatePicker" Width="100"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Добавить" Width="80" Margin="0,0,10,0" Click="AddAuthor_Click"/>
            <Button Content="Сохранить" Width="80" Margin="0,0,10,0" Click="EditAuthor_Click"/>
            <Button Content="Удалить" Width="80" Click="DeleteAuthor_Click"/>
        </StackPanel>
    </Grid>
</Window>